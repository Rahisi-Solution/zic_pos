<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#c71f37"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >

    <ImageView
        android:id="@+id/check_image"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:src="@drawable/ic_round_cancel_24"
        app:tint="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="20dp"
        />

    <TextView
        android:id="@+id/name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Verification Failed"
        app:layout_constraintTop_toBottomOf="@id/check_image"
        android:textSize="20sp"
        android:gravity="center"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/rubik_regular"
        />

    <TextView
        android:id="@+id/message_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Invalid Certificate"
        app:layout_constraintTop_toBottomOf="@id/name_title"
        android:textSize="23sp"
        android:gravity="center"
        android:textAllCaps="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="10dp"
        android:textColor="@color/white"
        android:fontFamily="@font/rubik_regular"
        />



    <View
        android:id="@+id/divider_3"
        android:layout_width="200dp"
        android:layout_height="2dp"
        app:layout_constraintTop_toBottomOf="@id/message_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        android:alpha="0.5"
        />

    <TextView
        android:id="@+id/desc_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:text="Please Apply For Insurance"
        app:layout_constraintTop_toBottomOf="@id/divider_3"
        android:layout_marginTop="5dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintVertical_bias="0"
        android:textSize="18sp"
        android:padding="3dp"
        android:gravity="center"
        android:textAllCaps="false"
        android:fontFamily="@font/rubik_regular"
        android:textColor="@color/white"
        />

    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
        android:id="@+id/agree_button"
        android:layout_width="310dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/desc_text"
        android:layout_marginHorizontal="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:text="Ok"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik_regular"
        android:paddingVertical="15dp"
        android:textSize="18sp"
        android:layout_marginBottom="15dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>